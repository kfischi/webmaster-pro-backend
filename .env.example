# 🚂 WebMaster Pro Backend - Environment Variables

# 🌍 Server Configuration
NODE_ENV=development
PORT=3001

# 🗄️ Database Configuration (Supabase PostgreSQL)
DATABASE_URL="postgresql://username:password@db.supabase.co:5432/postgres?schema=public"

# 🤖 OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id-here

# 🔐 JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# 📧 Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@webmaster-pro.co.il
FROM_NAME="WebMaster Pro"

# 💳 Payment Configuration (Optional - for Stripe later)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# 🌐 Frontend URLs (for CORS)
FRONTEND_URL=https://webmaster-pro-frontend-ctj8.vercel.app
FRONTEND_URL_LOCAL=http://localhost:3000

# 📁 File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 🔒 Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 📊 Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=123456789

# 🏷️ Application Configuration
APP_NAME="WebMaster Pro"
APP_VERSION="1.0.0"
APP_URL=https://webmaster-pro-backend.railway.app
SUPPORT_EMAIL=support@webmaster-pro.co.il

# 🐛 Debug Configuration
DEBUG=false
LOG_LEVEL=info

# 🌍 Internationalization
DEFAULT_LANGUAGE=he
SUPPORTED_LANGUAGES=he,en

# 📱 Mobile App Configuration (Future)
MOBILE_APP_URL_SCHEME=webmasterpro://
MOBILE_APP_ANDROID_PACKAGE=com.webmasterpro.app
MOBILE_APP_IOS_BUNDLE=com.webmasterpro.app

# 🔄 Background Jobs (Optional)
REDIS_URL=redis://localhost:6379
QUEUE_NAME=webmaster-pro-jobs

# 🌤️ Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=webmaster-pro-uploads

# 📈 Monitoring & Logging (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# 🧪 Testing Configuration
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/webmaster_pro_test"

# 🔐 API Keys for External Services
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
PEXELS_API_KEY=your-pexels-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# 📞 Communication Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# 🏦 Israeli Payment Services
TRANZILA_SUPPLIER=your-tranzila-supplier-id
TRANZILA_CURRENCY=1
MESHULAM_PAGE_CODE=your-meshulam-page-code
MESHULAM_USER_ID=your-meshulam-user-id

# 🌍 CDN Configuration
CDN_URL=https://cdn.webmaster-pro.co.il
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# 🔍 Search Configuration
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key

# 🎯 Marketing & Analytics
FACEBOOK_APP_ID=your-facebook-app-id
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# 🚀 Performance Configuration
CACHE_TTL=3600
SESSION_SECRET=your-session-secret-key
COMPRESSION_LEVEL=6
